<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="424" Width="610">
    <Grid x:Name="LayoutRoot" HorizontalAlignment="Center" VerticalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" >
            <Grid x:Name="GaugeGrid" Grid.Row="0"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="UpdateButton" Content="Start Update" Width="150" Height="30" Click="UpdateButton_Click" Margin="25,6,25,-6" />
                <Button x:Name="UpdateStopButton" Content="Stop Update" Grid.Column="1" Width="150" Height="30" Click="UpdateStopButton_Click" Margin="25,6,25,-6" />
            </Grid>
        </StackPanel>

    </Grid>
</Window>
