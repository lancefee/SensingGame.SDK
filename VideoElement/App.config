<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
  </startup>

  <appSettings>
    <add key="Distance" value="5"/>
    <!--扫码等待时间-->
    <add key="AutoCloseDuration" value="50"/>
    <!--无人时切换到视频-->
    <add key="ScreenSave" value="10"/>
    <add key="WeixinAppId" value="wx9ff3581ee0c40573"/>
    <add key="ActivityId" value="4"/>
  </appSettings>
  <!-- This section contains the log4net configuration settings -->
  <log4net>
    <appender name="Logger" type="log4net.Appender.RollingFileAppender">
      <file value="Errorlog.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="20"/>
      <maximumFileSize value="1MB"/>
      <staticLogFileName value="true"/>
      <encoding value="utf-8"/>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG"/>
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%thread] %logger %date %-5level - %message %location %newline"/>
      </layout>
    </appender>


    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="INFO"/>
        <foreColor value="Green"/>
      </mapping>
      <mapping>
        <level value="DEBUG"/>
        <foreColor value="White"/>
      </mapping>
      <mapping>
        <level value="WARN"/>
        <foreColor value="Yellow, HighIntensity"/>
      </mapping>
      <mapping>
        <level value="ERROR"/>
        <foreColor value="Red, HighIntensity"/>
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="[%thread] %-5level %logger  - %message%newline"/>
      </layout>
    </appender>

    <root>
      <level key="log_level" value="ALL"/>
      <appender-ref ref="Logger"/>
      <appender-ref ref="ColoredConsoleAppender"/>
    </root>

  </log4net>


  <runtime>


    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">


      <dependentAssembly>


        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral"/>


        <bindingRedirect oldVersion="0.0.0.0-8.0.0.0" newVersion="8.0.0.0"/>


      </dependentAssembly>


    </assemblyBinding>


  </runtime>
</configuration>
