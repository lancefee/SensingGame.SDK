<UserControl x:Class="VideoElement.EraserTool.ImageTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border x:Name="ElementImg" Background="{Binding ImgBrush}" Width="42" Height="42"></Border>
        <TextBlock x:Name="ElementTxt" Text="{Binding TitleName}" Grid.Row="1" Margin="0 -5 0 0" VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="#b7b7b7"></TextBlock>
    </Grid>
</UserControl>
