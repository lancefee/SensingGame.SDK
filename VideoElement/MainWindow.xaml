<Window x:Class="VideoElement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VideoElement"
        Title="MainWindow" WindowState="Maximized" WindowStyle="None"   Closing="Window_Closing" ResizeMode="NoResize"  >
    <Viewbox Stretch="Fill">
        <Canvas x:Name="root" Width="1920" Height="1080" Background="Black">
            <local:VideoControl x:Name="videoControl"  Canvas.Left="0" Canvas.Top="0" Width="1920" Height="1080"/>
        </Canvas>
    </Viewbox>
</Window>
